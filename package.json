{
  "name": "cleanlang",
  "version": "0.3.1",
  "description": "A Clean new programming Language",
  "main": "lib/clean.js",
  "bin": {
    "clean": "bin/command.js"
  },
  "scripts": {
    "test": "nyc ava --verbose --serial test/*.test.js",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.+(js|json|md)": [
      "prettier --write --ignore-unknown",
      "git add ."
    ]
  },
  "author": "Santosh Rajan",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^1.6.1",
    "escodegen": "^1.8.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nyc": "^10.2.0",
    "prettier": "2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cleanlang/clean.git"
  }
}
